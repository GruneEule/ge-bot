generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Dieses Modell speichert die Basiskonfiguration f체r jeden Discord-Server
model GuildConfig {
  // Die ID des Discord-Servers (Guild). Dies ist der Prim채rschl체ssel.
  id String @id @db.VarChar(30)

  // Die ID des Kanals f체r die Logging-Funktion
  logChannelId String? @db.VarChar(30) // Kann Null sein (Konfiguration noch nicht gesetzt)

  // Die ID der AutoRole, die neue Mitglieder erhalten
  autoRoleId String? @db.VarChar(30)

  // Das Warnlimit, ab dem ein Ban erfolgt
  warnLimit Int @default(3)

  // Optional: Speichert das Datum, wann der Eintrag zuletzt aktualisiert wurde
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
